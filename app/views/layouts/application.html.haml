!!!
%html
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Philosopher&subset=latin", :rel => "stylesheet", :type => "text/css"}/
    %title FallowFollow
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.cycle.all.js'
    = csrf_meta_tag
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-378745-9']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    %body{:style => 'padding-top: 40px;'}
      .topbar
        .fill
          .container
            %h3= link_to 'FallowFollow', '#'
            - if @current_user
              %ul
                %li{:class => ('active' if @furrows)}= link_to 'Active Furrows'
            %ul.nav.secondary-nav
              -#- if @current_user
                -#%li= link_to 'Sign Out', logout_path
              -#- else
                -#%li= link_to 'Sign In with Twitter', '/auth/twitter'

      .container
        .shadowed.rounded.content
          = yield
