<%= form_for @furrow do |f| %>
  <%= f.error_messages %>  

  <br/>

  <p id="furrowForm" class="alignCenter">
    I want to
    <%= select 'furrow', 'action', ['unfollow', 'follow'] %>
    <%= fields_for @furrow.seed_user do |suf| %>
      <%= suf.text_field :nickname, :size => 15, :limit => 15 %>
    <% end %>
    for
    <%= f.text_field :duration, :size => 2, :limit => 2 %> days
    <br/><br/>
    <%= f.submit 'Create!' %>
  </p>
<% end %>
